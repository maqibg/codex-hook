# codex-hook 配置
# 将此文件复制为 .env 放在 exe 同目录（target/release/.env）

# 调试模式（true=输出详细日志到 stderr）
DEBUG=false

# 代理（访问 Telegram API 需要，国内必填）
# 支持 HTTP / SOCKS5，留空=不使用
# HTTPS_PROXY=http://127.0.0.1:7890

# AI 摘要（OpenAI 兼容 API，失败自动降级本地算法）
AI_ENABLE=true
AI_API_KEY=sk-xxx
AI_BASE_URL=https://api.deepseek.com
AI_MODEL=deepseek-chat
AI_MAX_WORDS=500

# Windows 桌面通知
WIN_NOTIFY_ENABLE=true

# 语音播报（Windows TTS）
VOICE_ENABLE=true
VOICE_STOP=Codex任务完成

# Telegram 通知（可配多个实例：TG_1_*、TG_2_*...）
# 获取 Token：Telegram 搜索 @BotFather → /newbot
# 获取 Chat ID：Telegram 搜索 @userinfobot → 发消息查看
TG_1_ENABLE=true
TG_1_NAME=通知1
TG_1_TOKEN=<Token>
TG_1_CHAT_ID=<Chat ID>

# 飞书 Webhook 通知（可配多个实例：FS_1_*、FS_2_*...）
# 获取 URL：飞书群 → 设置 → 群机器人 → 添加 → 自定义机器人 → 复制 Webhook URL
# FS_1_ENABLE=true
# FS_1_NAME=飞书通知
# FS_1_WEBHOOK_URL=<Webhook URL>
